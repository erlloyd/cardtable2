      "Bash(mkdir:*)",
      "mcp__sequential-thinking__sequentialthinking",
      "Bash(chmod:*)",
      "Bash(pnpm:*)",
      "WebSearch",
      "Bash(node --version)",
      "Bash(mise ls node)"
