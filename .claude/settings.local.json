{
  "permissions": {
    "allow": [
      "Bash(git init:*)",
      "Bash(mkdir:*)",
      "mcp__sequential-thinking__sequentialthinking",
      "Bash(chmod:*)",
      "Bash(pnpm:*)",
      "WebSearch",
      "Bash(node --version)",
      "Bash(mise ls node)",
      "WebFetch(domain:code.claude.com)",
      "Bash(curl:*)",
      "Bash(lsof:*)",
      "Bash(git checkout:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:tanstack.com)",
      "Bash(cat:*)",
      "Bash(gh run view:*)"
    ],
    "deny": []
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude needs your input to continue\" with title \"Claude Code\" sound name \"Ping\"'",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude has completed the task\" with title \"Claude Code\" sound name \"Glass\"'",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
